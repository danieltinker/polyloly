# PolyLOL Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# POLYMARKET
# =============================================================================

# Your wallet private key (without 0x prefix is fine)
# CRITICAL: Keep this secret!
POLYMARKET_PRIVATE_KEY=

# Optional: API key if using authenticated endpoints
POLYMARKET_API_KEY=

# =============================================================================
# ESPORTS DATA SOURCES
# =============================================================================

# OpenDota (Dota 2) - Free tier available
# Get key at: https://www.opendota.com/api-keys
OPENDOTA_API_KEY=

# PandaScore - Paid
# Get key at: https://developers.pandascore.co/
PANDASCORE_API_KEY=

# GRID - Enterprise, requires approval
# Apply at: https://grid.gg/get-access/
GRID_API_KEY=

# =============================================================================
# ALERTS
# =============================================================================

# Telegram bot for alerts
# Create bot via @BotFather, get chat ID via @userinfobot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord webhook (alternative to Telegram)
DISCORD_WEBHOOK_URL=

# =============================================================================
# DATABASE (Optional)
# =============================================================================

# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/polyloly

# Redis for caching
REDIS_URL=redis://localhost:6379

# =============================================================================
# TRADING MODE
# =============================================================================

# Set to "false" for live trading (REAL MONEY AT RISK!)
PAPER_TRADING=true

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# RISK LIMITS (Override config/base.yaml)
# =============================================================================

# Maximum daily loss before kill switch (USDC)
MAX_DAILY_LOSS=200

# Maximum position per market (USDC)
MAX_POSITION_PER_MARKET=1500

# Maximum total exposure across all markets (USDC)
MAX_TOTAL_EXPOSURE=5000

# =============================================================================
# ADMIN
# =============================================================================

# Token for admin endpoints (generate a random string)
ADMIN_TOKEN=

# Health check server port
HEALTH_PORT=8080
